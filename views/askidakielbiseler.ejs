<!DOCTYPE html>
<html lang="tr">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Askıdaki Elbiseler - İnci Giyim</title>
  <link rel="stylesheet" href="../CSS/askidakielbiseler.css">
</head>

<body>

  <header>
    <h1 class="metinyazisi">İnci Giyim</h1>
    <nav>
      <ul class="menü">
        <li><a href="/anasayfa">Ana Sayfa</a></li>
        <li>
          <a href="#">Kategoriler</a>
          <div class="dropdown">
            <div class="dropdown2">
              <div class="deneme"><a href="/erkek">Erkek</a></div>
              <div class="deneme"><a href="/kadin">Kadın</a></div>
              <div class="deneme"><a href="/erkekCocuk">Erkek Çocuk</a></div>
              <div class="deneme"><a href="/kizCocuk">Kız Çocuk</a></div>
            </div>
          </div>
        </li>
        <li><a href="/askidaelbise">Askıda Elbise</a></li>
        <li><a href="/api/sepet">Sepet</a></li>
        <li><a href="/odeme">Ödeme</a></li>
      </ul>
    </nav>

    <div class="cta">
      <a class="cta" id="girisBtn" href="/login" style="display: none;">
        <button class="kullaniciBtn">Kullanıcı Girişi</button>
      </a>
      <a class="cta" id="hesapBtn" href="/hesap" style="display: none;">
        <button class="kullaniciBtn"><span id="welcomeMessage"></span></button>
      </a>

    </div>

  </header>

  <div class="statusMessage">
    <% if (success_msg) { %>
      <div class="success-message">
        <%= success_msg %>
      </div>
      <% } %>
        <% if (error_msg) { %>
          <div class="error-message">
            <%= error_msg %>
          </div>
          <% } %>
  </div>




  <div class="hero">
    <h2>Askıdaki Elbiseler</h2>
    <div id="productContainer" class="product-showcase">
      <% urunler.forEach((urun)=> { %>
        <div class="urunler">
          <h3>
            <%= urun.isim %>
          </h3>
          <img src="<%= urun.resim_yolu %>" alt="<%= urun.isim %>" width="200">

          <button class="urun-ayrintilari">Ürün Ayrıntıları</button>
          <div class="urun-aciklama gizli">
            <p>
              <%= urun.aciklama %>
            </p>
          </div>
          <form action="/satin-al" method="POST">
            <input type="hidden" name="id" value="<%= urun.id %>">

            <% if (urun.beden && urun.beden.trim() !=='' ) { %>
              <label for="beden">Beden Seçin:</label>
              <select name="beden" required>
                <% urun.beden.split(',').forEach((beden)=> { %>
                  <option value="<%= beden.trim() %>">
                    <%= beden.trim() %>
                  </option>
                  <% }); %>
              </select>
              <% } else { %>
                <p>Beden bilgisi mevcut değil.</p>
                <% } %>

                  <% if (urun.renk && urun.renk.trim() !=='' ) { %>
                    <label for="renk">Renk Seçin:</label>
                    <select name="renk" required>
                      <% urun.renk.split(',').forEach((renk)=> { %>
                        <option value="<%= renk.trim() %>">
                          <%= renk.trim() %>
                        </option>
                        <% }); %>
                    </select>
                    <% } else { %>
                      <p>Renk bilgisi mevcut değil.</p>
                      <% } %>

                        <label for="tc_kimlik">TC Kimlik No:</label>
                        <input type="text" name="tc_kimlik" required>

                        <button type="submit">Ürünü Satın Al</button>

          </form>
        </div>
        <% }); %>
    </div>
  </div>


  <script src="../JAVASCRİPT/askidakielbiseler.js"></script>
</body>

</html>